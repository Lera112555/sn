<Window x:Class="sn.snake"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:sn"
        mc:Ignorable="d"
        Title="snake" Height="450" Width="800">
   <Canvas x:Name="canvas">
        <Ellipse VerticalAlignment="Top" HorizontalAlignment="Left" Margin="150,117.4,0,60" Visibility="Hidden" x:Name="elip" Fill="White" Height="20" Stroke="Black" Width="20" Grid.Row="1" d:IsLocked="True"/>
        <Ellipse VerticalAlignment="Top" HorizontalAlignment="Left" Visibility="Hidden" x:Name="food"  Fill="White" Height="22"  Width="22" d:IsLocked="True" />
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="300" Margin="60,60,0,5" VerticalAlignment="Top" Width="490" d:IsLocked="True" Grid.RowSpan="2"/>
        <Label x:Name="Score" Content="Счёт: " Canvas.Left="610" Canvas.Top="105" Width="100" FontSize="18" Background="White" Foreground="Black" FontWeight="SemiBold" BorderBrush="Black" OpacityMask="Black"/>

    </Canvas>
</Window>
